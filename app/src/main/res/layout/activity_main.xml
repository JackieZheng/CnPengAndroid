                android:id="@+id/bt_ViewSwitcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="left|center_vertical"
                android:text="32 ViewSwitcher的基本使用"/>
            <Button
                android:id="@+id/bt_ViewSwitcher2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="left|center_vertical"
                android:text="32 ViewSwitcher仿写安卓的launcher界面"/>
            <Button
                android:id="@+id/bt_ImageSwitcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="left|center_vertical"
                android:text="33 ImageSwitcher实现带动画的图片浏览器"/>
