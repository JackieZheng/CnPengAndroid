                android:id="@+id/bt_ListView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19 ListView自定义分割线并用entries指定内容"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_ArrayAdapter01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 使用ArrayAdapter展示ListView"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_ListActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21 使用ListActivity展示ListView"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_simpleAdapterActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22 使用SimpleAdapter展示ListView"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23 AutoCompleteTextView"/>
