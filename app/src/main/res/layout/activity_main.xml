                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>

            <Button
                android:id="@+id/bt_progressBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text="30 显示在标题栏上的progressBar"/>
