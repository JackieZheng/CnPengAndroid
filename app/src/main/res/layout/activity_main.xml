                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_caculater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09使用网格布局实现计算器界面"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_textView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10TextView的基本使用01"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"/>
            <Button
                android:id="@+id/bt_9Patch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11 点九图 9Patch 的基本使用"/>
